MAILTO=box@4sconsult.de
# m h  dom mon dow   command

# Leere eve.json
0 */6 * * *  echo "" > /data/suricata/eve.json  && sh $BASEDIR/$GITDIR/scripts/Automation/croncheck.sh delete_suricata_log SUCCESS || sh $BASEDIR/$GITDIR/scripts/Automation/croncheck.sh delete_suricata_log FAILURE

*/30 * * * *  vuln_whisperer -c /usr/local/etc/vuln_openvas.ini -s openvas 2>&1 >/dev/null && sh $BASEDIR/$GITDIR/scripts/Automation/croncheck.sh vulnwhisperer SUCCESS || sh $BASEDIR/$GITDIR/scripts/Automation/croncheck.sh vulnwhisperer FAILURE

# Update Resources on Sunday at 9 am
0 9 * * 0 $BASEDIR/$GITDIR/scripts/Automation/resourceupdate.sh && sh $BASEDIR/$GITDIR/scripts/Automation/croncheck.sh resourceupdate_sunday SUCCESS || sh $BASEDIR/$GITDIR/scripts/Automation/croncheck.sh resourceupdate_sunday FAILURE

# Start openvasmanager if not running
*/1 * * * * $BASEDIR/$GITDIR/scripts/Automation/startOpenVas.sh > /dev/null 2>&1 && sh $BASEDIR/$GITDIR/scripts/Automation/croncheck.sh openvasmanager SUCCESS || sh $BASEDIR/$GITDIR/scripts/Automation/croncheck.sh openvasmanager FAILURE

# Suricata update
@daily docker exec suricata /root/scripts/update.sh > /dev/null 2>&1 && sh $BASEDIR/$GITDIR/scripts/Automation/croncheck.sh suricata_update SUCCESS || sh $BASEDIR/$GITDIR/scripts/Automation/croncheck.sh suricata_update FAILURE
