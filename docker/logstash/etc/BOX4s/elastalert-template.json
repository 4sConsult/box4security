{
  "index_patterns": "elastalert_status",
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "refresh_interval": "10s",
      "codec": "best_compression",
      "mapping": {
        "total_fields": { "limit": 10000}
      }
    }
  },
  "mappings": {
    "properties": {
      "match_body" : {
        "type": "object",
        "properties": {
          "destination" : {
            "type": "object",
            "properties": {
              "geo": {
                "type" : "object",
                "properties": {
                  "location" : {
                    "type": "geo_point"
                  }
                }
              }
            }
          },
          "source" : {
            "type": "object",
            "properties": {
              "geo": {
                "type" : "object",
                "properties": {
                  "location" : {
                    "type": "geo_point"
                  }
                }
              }
            }
          },
          "server" : {
            "type": "object",
            "properties": {
              "geo": {
                "type" : "object",
                "properties": {
                  "location" : {
                    "type": "geo_point"
                  }
                }
              }
            }
          },
          "client" : {
            "type": "object",
            "properties": {
              "geo": {
                "type" : "object",
                "properties": {
                  "location" : {
                    "type": "geo_point"
                  }
                }
              }
            }
          },
          "http" : {
            "type" : "object",
            "properties" : {
              "request" : {
                "type" : "object",
                "properties" : {
                  "body" : {
                    "type": "object",
                    "properties" : {
                      "bytes" : {
                        "type" : "long"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
